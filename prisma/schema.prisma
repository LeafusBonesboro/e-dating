datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  name     String?
  messages Message[]
}

model Character {
  id        String    @id @default(cuid())
  name      String    @unique
  bio       String?
  avatarUrl String?
  loraToken String?
  messages  Message[]
}

model Message {
  id          String   @id @default(cuid())
  sender      String   // "user" or "character"
  content     String
  imageUrl    String?
  createdAt   DateTime @default(now())

  userId      String?
  characterId String?

  user      User?      @relation(fields: [userId], references: [id])
  character Character? @relation(fields: [characterId], references: [id])

  @@index([characterId])
  @@index([userId])
}
